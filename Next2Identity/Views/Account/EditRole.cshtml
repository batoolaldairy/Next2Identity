@model Next2Identity.Models.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>EditRole</h1>

<h4>EditRoleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId" readonly class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="RolesList" a-asp-action="Account">Cancle</a>
            </div>
        </form>
    </div>
</div>
<div class="card">
    <div class="card-header"> user in list Role</div>
    <div class="card-body">
        @if (Model.Users!.Any())
        {
            @foreach (var user in Model.Users!)
            {
                @user <br />
            }
        }
        else
        {
            <span class="alert-warning"> no user in role list</span>
        }
    </div>
    <div class="card-footer">
        <a asp-action="ModifyUserInRole" asp-controller="Account" asp-route-id="@Model.RoleId">
            Add/Remove user form this role
        </a>
        </div>
    
</div>



