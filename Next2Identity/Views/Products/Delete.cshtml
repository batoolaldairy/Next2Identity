@model Product
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<br />
<h4>Are you sure to delete @Model.ProductName?</h4>
<br />
<form method="post" asp-action="Delete">
    @Html.HiddenFor(x=>x.Id)

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="AllProducts" class="btn btn-warning">Cancle</a>


</form>

