@model Product
@{
    ViewData["Title"] = "CreateProduct";
}

<h1>Create Product</h1>
<form method="post" asp-action="CreateProduct">
    <table class="table table-bordered">
        <tr>
            <td><label asp-for="ProductName"></label></td>
            <td>
                <input asp-for="ProductName" class="form-control" placeholder="Enter Product Name" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="Quantity"></label></td>
            <td>
                <input asp-for="Quantity" class="form-control"  />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td><label asp-for="price"></label></td>
            <td>
                <input asp-for="price" class="form-control"  />
                <span asp-validation-for="price" class="text-danger"></span>
            </td>
        </tr>
        
        
        <tr>
            <td><label asp-for="CategoryId"></label></td>
            <td>
                <select asp-for="CategoryId" asp-items="ViewBag.allcat" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-primary" value="Create" />
            </td>
        </tr>
    </table>
</form>

